[Unit]
Description=NZBget Server
After=network.target

[Service]
ExecStart={{ nzbget_home }}/nzbget -c {{ nzbget_conf_file }} -D
ExecStop={{ nzbget_home }}/nzbget -Q
ExecReload=/bin/kill -HUP $MAINPID
KillMode=process
User={{ nzbget_user }}
Group={{ nzbget_group }}
Restart=on-failure

[Install]
WantedBy=multi-user.target
